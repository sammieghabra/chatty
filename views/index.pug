extends layout

block content
    -data = data || {}

    if errors
        ul.my-errors
            for error in errors
                li= error.msg

    script(src="http://code.jquery.com/jquery-1.7.1.min.js")

    script
        include someshit.js

    form(class="form-registration")
        label(for="name") Name:
        input(
            type="text"
            id="name"
            name="name"
            class="form-control"
            value=data.name
        )

        label(for="email") Email:
        input(
            type="email"
            id="email"
            name="email"
            class="form-control"
            value=data.email
        )

        input(
            id="shitButton"
            type="submit"
            value="Submit"
            class="btn btn-lg btn-primary btn-block"
        )